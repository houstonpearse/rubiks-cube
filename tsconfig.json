{
    "compilerOptions": {
        "module": "esnext",
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "stripInternal": true,
        "moduleResolution": "bundler",
        "outDir": "./types",
        "rootDir": "./src",
        "lib": ["DOM", "ESNext"]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "tests"]
}
